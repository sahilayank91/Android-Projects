<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--"@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/one" />
-->

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_marginRight="14dp"
            app:srcCompat="@drawable/ic_share"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/bg_screen1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:layout_below="@+id/title" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            app:srcCompat="@mipmap/delete"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/bg_screen3"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/share_button"
            android:layout_below="@+id/title" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="?attr/colorPrimary"
            android:text="Action"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_text_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:hint="Enter your TODO"
            android:singleLine="false"
            android:enabled="false"
            android:inputType="none"
            android:gravity="center"
            android:id="@+id/message"
            android:background="#ffffff"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:id="@+id/user" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wl"
            android:gravity="bottom|end"
            android:hint="Word Length"
            android:layout_above="@+id/title"
            android:layout_alignRight="@+id/share_button"
            android:layout_alignEnd="@+id/share_button"
            android:layout_toEndOf="@+id/user"
            android:layout_toRightOf="@+id/user" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text= "Title"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:enabled="false"
            android:textColor="#FF0000"
            android:textSize="@dimen/article_subheading"
            android:layout_below="@+id/message"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:foregroundGravity="bottom"
            app:srcCompat="@mipmap/edit"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/bg_screen3"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/delete_button"
            android:layout_below="@+id/title" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
